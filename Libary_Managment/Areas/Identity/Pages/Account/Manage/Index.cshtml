@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    body {
        background: linear-gradient(to right, #f7f7ff, #dff1ff);
        min-height: 100vh;
    }

    .profile-container {
        padding-top: 40px;
        padding-bottom: 40px;
    }

    .card {
        border-radius: 20px;
    }

    h3.page-title {
        text-align: center;
        font-weight: 600;
        margin-bottom: 30px;
        color: #2c3e50;
    }
</style>

<div class="container profile-container">
    <h3 class="page-title">@ViewData["Title"]</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form id="profile-form" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Username" class="form-label fw-semibold">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Your username" disabled />
                        </div>

                        <!-- Row 1: Phone Number + Name -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Input.PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.Name" class="form-label fw-semibold">Full Name</label>
                                <input asp-for="Input.Name" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Row 2: Address + NID -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Input.Address" class="form-label fw-semibold">Address</label>
                                <textarea asp-for="Input.Address" class="form-control" rows="3" placeholder="Enter your address"></textarea>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.NID" class="form-label fw-semibold">NID</label>
                                <input asp-for="Input.NID" class="form-control" placeholder="Enter your NID" />
                                <span asp-validation-for="Input.NID" class="text-danger"></span>
                            </div>
                        </div>

                        <button id="update-profile-button" type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                            Save Changes
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
